<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="odtwarzacz.Playlist.PlaylistFXMLController">
   <center>
      <ScrollPane fx:id="playlistScroll" fitToWidth="true" hbarPolicy="NEVER">
         <content>
            <VBox fx:id="playlistPane" prefHeight="0.0" spacing="8.0">
               <children>
                  <Hyperlink text="Hyperlink" />
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#hide" text="&gt;" HBox.hgrow="NEVER" />
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="%player.playlist" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <padding>
                  <Insets bottom="12.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </top>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
   <bottom>
      <HBox spacing="6.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#add" text="%playlist.add" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#remove" text="%playlist.remove" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#play" text="%playlist.playall" />
            <ToggleButton fx:id="randomTogglebutton" mnemonicParsing="false" onAction="#randomToggle" text="%playlist.random" />
         </children>
         <padding>
            <Insets top="12.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
